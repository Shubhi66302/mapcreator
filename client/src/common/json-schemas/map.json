{
  "$schema": "http://json-schema.org/schema#",
  "$id": "map",
  "title": "mapcreator's internal representation of map",
  "type": "object",
  "required": ["elevators", "zones", "queueDatas", "floors"],
  "additionalProperties": true,
  "properties": {
    "elevators": {
      "type": "array",
      "items": {
        "$ref": "elevator"
      }
    },
    "zones": {
      "type": "array",
      "items": { "$ref": "zone" }
    },
    "queueDatas": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["queue_data_id", "coordinates", "data"],
        "properties": {
          "queue_data_id": { "type": "integer" },
          "coordinates": {
            "type": "array",
            "items": { "$ref": "definitions#/coordinateKey" }
          },
          "data": { "$ref": "queueData" }
        }
      }
    },
    "floors": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "floor_id",
          "map_values",
          "chargers",
          "ppses",
          "odsExcludeds",
          "dockPoints",
          "fireEmergencies"
        ],
        "additionalProperties": true,
        "properties": {
          "floor_id": { "type": "integer", "minimum": 1 },
          "map_values": {
            "type": "array",
            "items": { "$ref": "barcodeWithNumberCoordinate" }
          },
          "chargers": {
            "type": "array",

            "items": {
              "allOf": [
                {
                  "type": "object",
                  "required": ["charger_id", "coordinate"],
                  "properties": {
                    "charger_id": { "type": "integer" },
                    "coordinate": { "$ref": "definitions#/coordinateKey" }
                  }
                },
                { "$ref": "charger" }
              ]
            }
          },
          "ppses": {
            "type": "array",
            "items": {
              "allOf": [
                {
                  "type": "object",
                  "required": ["pps_id", "coordinate"],
                  "properties": {
                    "pss_id": { "type": "integer" },
                    "coordinate": { "$ref": "definitions#/coordinateKey" }
                  }
                },
                { "$ref": "pps" }
              ]
            }
          },
          "odsExcludeds": {
            "type": "array",
            "items": {
              "allOf": [
                {
                  "type": "object",
                  "required": ["ods_excluded_id", "coordinate"],
                  "properties": {
                    "ods_excluded_id": { "type": "integer" },
                    "coordinate": { "$ref": "definitions#/coordinateKey" }
                  }
                },
                { "$ref": "odsExcluded" }
              ]
            }
          },
          "dockPoints": {
            "type": "array",
            "items": {
              "allOf": [
                {
                  "type": "object",
                  "required": ["dock_point_id", "coordinate"],
                  "properties": {
                    "dock_point_id": { "type": "integer" },
                    "coordinate": { "$ref": "definitions#/coordinateKey" }
                  }
                },
                { "$ref": "dockPoint" }
              ]
            }
          },
          "fireEmergencies": {
            "type": "array",
            "items": {
              "allOf": [
                {
                  "type": "object",
                  "required": ["fire_emergency_id", "coordinate"],
                  "properties": {
                    "fire_emergency_id": { "type": "integer" },
                    "coordinate": { "$ref": "definitions#/coordinateKey" }
                  }
                },
                { "$ref": "fireEmergency" }
              ]
            }
          }
        }
      }
    }
  }
}
