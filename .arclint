{
  "linters": {
    "eslint-regex-based": {
      "type": "script-and-regex",
      "include": "(\\.jsx?$)",
      "script-and-regex.script": "sh -c '([ -e ./node_modules/.bin/eslint ]) && (./node_modules/.bin/eslint -f compact \"$0\" --no-ignore || true)'",
      "script-and-regex.regex": "/^(?P<file>.*): line (?P<line>[0-9]*), col (?P<char>[0-9]*), ((?P<warning>Warning)|(?P<error>Error)) - (?P<message>.*)$/m"
    }
  }
}
