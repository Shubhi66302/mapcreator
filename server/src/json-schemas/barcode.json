{
  "$schema": "http://json-schema.org/schema#",
  "$id": "barcode",
  "title": "Barcode schema",
  "type": "object",
  "required": ["coordinate", "barcode", "neighbours"],
  "properties": {
    "blocked": { "type": "boolean" },
    "zone": { "type": "string" },
    "coordinate": { "$ref": "definitions#/coordinate" },
    "store_status": { "type": "integer" },
    "barcode": { "$ref": "definitions#/barcodeString" },
    "neighbours": {
      "description": "eg. [[1,1,1], [1,1,0], [0,0,0], null]",
      "type": "array",
      "items": {
        "anyOf": [
          { "type": "null" },
          {
            "type": "array",
            "items": { "type": "integer", "enum": [0, 1] },
            "minItems": 3,
            "maxItems": 3
          }
        ]
      },
      "minItems": 4,
      "maxItems": 4
    },
    "size_info": {
      "type": "array",
      "items": { "type": "integer" },
      "minItems": 4,
      "maxItems": 4
    },
    "botid": { "type": "string" },
    "adjacency": {
      "type": "array",
      "items": {
        "anyOf": [{ "type": "null" }, { "$ref": "definitions#/coordinate" }]
      },
      "minItems": 4,
      "maxItems": 4
    },
    "special": {
      "type": "boolean"
    }
  }
}
